<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/_17sdp"
    android:background="@drawable/edit_text_white_bg_12"
    android:paddingBottom="@dimen/_10sdp">


    <ImageView
        android:id="@+id/roundedImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy_topic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:radius="@dimen/_20sdp" />

    <View
        android:id="@+id/view4"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_17sdp"
        android:layout_marginBottom="@dimen/_17sdp"
        android:background="@drawable/black_round_corner"
        app:layout_constraintBottom_toBottomOf="@+id/roundedImageView"
        app:layout_constraintEnd_toEndOf="@+id/roundedImageView" />

    <TextView
        android:id="@+id/duration_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="7:12"
        android:textColor="@color/white"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:layout_constraintStart_toStartOf="@+id/view4"
        app:layout_constraintTop_toTopOf="@+id/view4" />


    <ImageView
        android:id="@+id/menu_iv"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:padding="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/ic_menu"
        app:tint="@color/light_brown"
        app:layout_constraintBottom_toBottomOf="@+id/profile_IV"
        app:layout_constraintEnd_toEndOf="@+id/roundedImageView"
        app:layout_constraintTop_toTopOf="@+id/profile_IV" />

    <com.appbroker.roundedimageview.RoundedImageView
        android:id="@+id/profile_IV"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/place_holder"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@+id/roundedImageView"
        app:layout_constraintTop_toBottomOf="@+id/roundedImageView"
        app:radius="@dimen/_20sdp" />

    <View
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        android:background="@drawable/round_circle_bg_white"
        app:layout_constraintBottom_toBottomOf="@+id/profile_IV"
        app:layout_constraintEnd_toEndOf="@+id/profile_IV"
        app:layout_constraintStart_toStartOf="@+id/profile_IV"
        app:layout_constraintTop_toTopOf="@+id/profile_IV" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:ellipsize="end"
        android:fontFamily="@font/montserrats_semibold"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintEnd_toStartOf="@+id/menu_iv"
        app:layout_constraintStart_toEndOf="@+id/profile_IV"
        app:layout_constraintTop_toTopOf="@+id/profile_IV"
        tools:text="Rodney Artichoke - Jazz al;sfjlaskjflsajfl;ksjalf;jsa;lfjlsakjflsajflsnvdfsgjhaipuwh nf" />


    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Ruby Von Rails"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/_4sdp"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintStart_toEndOf="@+id/profile_IV"
        app:layout_constraintTop_toBottomOf="@+id/title_tv" />

    <TextView
        android:id="@+id/views_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:fontFamily="@font/montserrat_medium"
        android:text="34K Views"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintBottom_toBottomOf="@+id/user_name_tv"
        app:layout_constraintStart_toEndOf="@+id/user_name_tv"
        app:layout_constraintTop_toTopOf="@+id/user_name_tv" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat_medium"
        android:maxLines="1"
        android:text="3 days ago"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintBottom_toBottomOf="@+id/views_tv"
        app:layout_constraintEnd_toStartOf="@+id/sports_iv"
        app:layout_constraintStart_toEndOf="@+id/views_tv"
        app:layout_constraintTop_toTopOf="@+id/views_tv" />

    <ImageView
        android:id="@+id/sports_iv"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:src="@drawable/ic_football"
        android:layout_marginEnd="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="@+id/report_iv"
        app:layout_constraintEnd_toStartOf="@+id/language_iv"
        app:layout_constraintTop_toTopOf="@+id/report_iv" />

    <ImageView
        android:id="@+id/language_iv"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:src="@drawable/ic_english"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="@+id/report_iv"
        app:layout_constraintEnd_toStartOf="@+id/report_iv"
        app:layout_constraintTop_toTopOf="@+id/report_iv" />

    <ImageView
        android:id="@+id/report_iv"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:padding="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:src="@drawable/ic_flag"
        app:tint="@color/light_brown"
        app:layout_constraintBottom_toBottomOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="@+id/menu_iv"
        app:layout_constraintTop_toBottomOf="@+id/menu_iv" />

    <LinearLayout
        android:id="@+id/menu_option"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_box_bg"
        android:elevation="@dimen/_4sdp"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_8sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/menu_iv"
        app:layout_constraintTop_toBottomOf="@+id/menu_iv">

        <TextView
            android:id="@+id/delete_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@color/light_brown" />

        <TextView
            android:id="@+id/edit_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>